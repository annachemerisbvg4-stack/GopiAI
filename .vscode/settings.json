{
    "wolf.disableHotModeWarning": true,
    // Python settings
    "python.defaultInterpreterPath": "./rag_memory_env/Scripts/python.exe",
    "python.analysis.extraPaths": [
        "./GopiAI-UI",
        "./GopiAI-Core",
        "./GopiAI-Widgets",
        "./GopiAI-App",
        "./GopiAI-Extensions",
        "./rag_memory_system",
    ],
    "python.analysis.autoImportCompletions": true,
    "python.analysis.autoSearchPaths": true,
    "python.analysis.typeCheckingMode": "basic",
    // PySide6/Qt settings
    "python.analysis.stubPath": "./rag_memory_env/Lib/site-packages/PySide6/typesystem",
    // UI settings
    "files.associations": {
        "*.ui": "xml"
    },
    // Workspace settings
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    }, // GitHub Copilot MCP settings
    "github.copilot.advanced": {
        "mcp.serverUrl": "http://localhost:8000",
        "debug": true
    },
    "chat.mcp.debug": true
}