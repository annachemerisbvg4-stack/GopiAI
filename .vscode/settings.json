{
    "python.defaultInterpreterPath": "./rag_memory_env/Scripts/python.exe",
    "python.analysis.extraPaths": [
        "./GopiAI-UI",
        "./GopiAI-CrewAI",
        "./GopiAI-Core",
        "./rag_memory_system"
    ],
    "python.analysis.autoImportCompletions": true,
    "python.analysis.typeCheckingMode": "basic",
    // UI settings
    "files.associations": {
        "*.md": "markdown"
    },
    "copilot.enable": {
        "*": true,
        "markdown": true,
        "python": true
    },
    "cody.commandCodeLenses": true,
    "cody.debug.verbose": true,
    "cody.experimental.tracing": true,
    "cody.internal.debug.tokenUsage": false,
    "cody.agentic.context.experimentalOptions": {},
    "cursorpyright.analysis.autoImportCompletions": true,
    "cursorpyright.analysis.extraPaths": [
        "./GopiAI-UI",
        "./GopiAI-Core",
        "./rag_memory_system"
    ],
    "cursorpyright.analysis.typeCheckingMode": "basic",
    "xline.disableBrowserTool": false,
    "xline.mcp.mode": "full",
    "xline.mcpMarketplace.enabled": true,
    "xline.preferredLanguage": "Russian - Русский"
}