    "from_email": "",
    "to_emails": [
      "dev-team@company.com",
      "qa-team@company.com"
    ],
    "use_tls": true
  },
  "slack": {
    "enabled": false,
    "webhook_url": "",
    "channel": "#ci-cd",
    "username": "GopiAI CI/CD Bot",
    "icon_emoji": ":robot_face:"
  },
  "discord": {
    "enabled": false,
    "webhook_url": "",
    "username": "GopiAI CI/CD Bot",
    "avatar_url": ""
  },
  "teams": {
    "enabled": false,
    "webhook_url": ""
  },
  "webhooks": [
    {
      "name": "Custom Webhook",
      "url": "https://your-webhook-endpoint.com/notifications",
      "headers": {
        "Authorization": "Bearer YOUR_TOKEN",
        "Content-Type": "application/json"
      },
      "enabled": false
    }
  ],
  "notification_rules": {
    "always_notify": ["failure", "error"],
    "notify_on_success": {
      "production": true,
      "staging": true,
      "development": false
    },
    "notify_on_coverage_drop": {
      "enabled": true,
      "threshold": 5.0
    },
    "notify_on_performance_regression": {
      "enabled": true,
      "threshold": 20.0
    }
  },
  "message_templates": {
    "success": {
      "title": "✅ Tests Passed",
      "color": "#28a745"
    },
    "failure": {
      "title": "❌ Tests Failed",
      "color": "#dc3545"
    },
    "unstable": {
      "title": "⚠️ Tests Unstable",
      "color": "#ffc107"
    }
  }
}